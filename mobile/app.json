{
  "expo": {
    "name": "Memora",
    "slug": "memora",
    "version": "0.1.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "scheme": "memora",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "assetBundlePatterns": [
      "**/*",
      "assets/models/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.memora.app",
      "infoPlist": {
        "NSPhotoLibraryUsageDescription": "Memora needs access to your photos to add accessibility captions to images for screen readers.",
        "NSPhotoLibraryAddUsageDescription": "Memora needs permission to save captioned images back to your library.",
        "UIBackgroundModes": ["fetch", "processing"]
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "package": "com.memora.app",
      "permissions": [
        "android.permission.READ_MEDIA_IMAGES",
        "android.permission.READ_MEDIA_VIDEO",
        "android.permission.RECEIVE_BOOT_COMPLETED",
        "android.permission.FOREGROUND_SERVICE",
        "android.permission.INTERNET",
        "android.permission.ACCESS_NETWORK_STATE"
      ]
    },
    "plugins": [
      [
        "expo-media-library",
        {
          "photosPermission": "Memora needs access to your photos to add accessibility captions.",
          "savePhotosPermission": "Memora needs permission to save captioned images.",
          "isAccessMediaLocationEnabled": true
        }
      ],
      "expo-background-fetch",
      "expo-task-manager",
      [
        "expo-sqlite",
        {
          "enableFTS": true
        }
      ]
    ],
    "extra": {
      "eas": {
        "projectId": "your-project-id"
      }
    }
  }
}
