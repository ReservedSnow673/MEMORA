{
  "expo": {
    "name": "Memora",
    "slug": "memora",
    "version": "0.1.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "automatic",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "assetBundlePatterns": ["**/*"],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.memora.app",
      "infoPlist": {
        "NSPhotoLibraryUsageDescription": "Memora needs access to your photos to add accessibility captions to images for screen readers.",
        "NSPhotoLibraryAddUsageDescription": "Memora needs permission to save captioned images back to your library.",
        "UIBackgroundModes": ["fetch", "processing"]
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "package": "com.memora.app",
      "permissions": [
        "android.permission.READ_EXTERNAL_STORAGE",
        "android.permission.WRITE_EXTERNAL_STORAGE",
        "android.permission.READ_MEDIA_IMAGES",
        "android.permission.RECEIVE_BOOT_COMPLETED",
        "android.permission.FOREGROUND_SERVICE"
      ]
    },
    "plugins": [
      "expo-media-library",
      "expo-background-fetch",
      "expo-task-manager"
    ]
  }
}
